            <div class="form-group">
                <label asp-for="cant_producto_x_hora" class="control-label"></label>
                <input asp-for="cant_producto_x_hora" class="form-control" />
                <span asp-validation-for="cant_producto_x_hora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="costo_operacion_x_hora" class="control-label"></label>
                <input asp-for="costo_operacion_x_hora" class="form-control" />
                <span asp-validation-for="costo_operacion_x_hora" class="text-danger"></span>
            </div>
            <div class="form-group">
