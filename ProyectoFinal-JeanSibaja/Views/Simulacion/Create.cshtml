@model ProyectoFinal_JeanSibaja.Models.ModelosSimulacion

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Simulacion</h4>
<hr />
<div class="row">
    <div class="container">
        <form asp-action="CreateSimulacion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="w-100 d-flex ">
                <div class="form-group col-6 p-2 ">
                    <label asp-for="@Model.Simulacion.Cantidad_dias_produccion_semanal" class="control-label"></label>
                    <input asp-for="@Model.Simulacion.Cantidad_dias_produccion_semanal" class="form-control" />
                    <span asp-validation-for="@Model.Simulacion.Cantidad_dias_produccion_semanal" class="text-danger"></span>
                </div>
                <div class="form-group col-6 p-2 ">
                    <label asp-for="@Model.Simulacion.Cantidad_horas_produccion_diaria" class="control-label"></label>
                    <input asp-for="@Model.Simulacion.Cantidad_horas_produccion_diaria" class="form-control" />
                    <span asp-validation-for="@Model.Simulacion.Cantidad_horas_produccion_diaria" class="text-danger"></span>
                </div>
            </div>

            <div class="w-100 d-flex ">
                <div class="form-group col-4 p-2 ">
                    <label asp-for="@Model.Simulacion.Cantidad_Meses_Simulacion" class="control-label"></label>
                    <input asp-for="@Model.Simulacion.Cantidad_Meses_Simulacion" class="form-control" />
                    <span asp-validation-for="@Model.Simulacion.Cantidad_Meses_Simulacion" class="text-danger"></span>
                </div>
                <div class="form-group col-4 p-2 ">
                    <label asp-for="@Model.Simulacion.Cantidad_Dias_Simulacion" class="control-label"></label>
                    <input asp-for="@Model.Simulacion.Cantidad_Dias_Simulacion" class="form-control" />
                    <span asp-validation-for="@Model.Simulacion.Cantidad_Dias_Simulacion" class="text-danger"></span>
                </div>
                <div class="form-group col-4 p-2 ">
                    <label asp-for="@Model.Simulacion.Cantidad_Horas_Simulacion" class="control-label"></label>
                    <input asp-for="@Model.Simulacion.Cantidad_Horas_Simulacion" class="form-control" />
                    <span asp-validation-for="@Model.Simulacion.Cantidad_Horas_Simulacion" class="text-danger"></span>
                </div>
            </div>
            <div class="w-100 d-flex ">
                <div class="form-group col p-2">
                    <label asp-for="@Model.Simulacion.Precio_x_fabricacion_del_Producto" class="control-label"></label>
                    <input asp-for="@Model.Simulacion.Precio_x_fabricacion_del_Producto" class="form-control" />
                    <span asp-validation-for="@Model.Simulacion.Precio_x_fabricacion_del_Producto" class="text-danger"></span>
                </div>
                <div class="form-group col p-2">
                    <label asp-for="@Model.Simulacion.Producto" class="control-label"></label>
                    @Html.DropDownListFor(x => Model.Simulacion.Producto, new SelectList(Model.Productos, "id", "nombre"), htmlAttributes: new { @class = "form-control", id = "id" })
                    <span asp-validation-for="@Model.Simulacion.Producto" class="text-danger"></span>
                </div>
            </div>

            <div class="w-100 d-flex ">
                <div class="form-group col p-2">
                    <label asp-for="@Model.Simulacion.Maquina1" class="control-label"></label>
                    @Html.DropDownListFor(x => Model.Simulacion.Maquina1, new SelectList(Model.Maquinas, "id", "nombre_descriptivo"), htmlAttributes: new { @class = "form-control", id = "id" })
                    <span asp-validation-for="@Model.Simulacion.Maquina1" class="text-danger"></span>
                </div>
                <div class="form-group col p-2">
                    <label asp-for="@Model.Simulacion.Maquina2" class="control-label"></label>
                    @Html.DropDownListFor(x => Model.Simulacion.Maquina2, new SelectList(Model.Maquinas, "id", "nombre_descriptivo"), htmlAttributes: new { @class = "form-control", id = "id" })
                    <span asp-validation-for="@Model.Simulacion.Maquina2" class="text-danger"></span>
                </div>

            </div>


            <div class="form-group">
                <input type="submit" value="Iniciar Simulacion" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
